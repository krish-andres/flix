<h1><%= @movie.title %></h1>
<%= image_for(@movie) %>

<h3>Rating:</h3>
<p><%= @movie.rating %></p>

<h3>Description:</h3>
<p><%= @movie.description %></p>

<h3>Release Date:</h3>
<p><%= @movie.released_on %></p>

<h3>Cast:</h3>
<p><%= @movie.cast %></p>

<h3>Director:</h3>
<p><%= @movie.director %></p>

<h3>Duration:</h3>
<p><%= @movie.duration %></p>

<h3>Box Office:</h3>
<p><%= format_total_gross(@movie) %></p>

<h3>Average Reviewer Rating:</h3>
<strong>
  <p><%= format_average_stars(@movie) %></p>
</strong>

<p>
  <%= link_to pluralize(@movie.reviews.size, "Review"), movie_reviews_path(@movie) %>
</p>

<br />

<nav>
  <%= link_to "Write Review", new_movie_review_path(@movie) %> ||
  <% if current_user_admin? %>
    <%= link_to "Edit", edit_movie_path(@movie) %> ||
    <%= link_to "Delete", @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</nav>
