<h1><%= @movie.title %></h1>

<h3>Rating:</h3>
<p><%= @movie.rating %></p>

<h3>Description:</h3>
<p><%= @movie.description %></p>

<h3>Release Date:</h3>
<p><%= @movie.released_on %></p>

<h3>Box Office:</h3>
<p><%= format_total_gross(@movie) %></p>

<%= link_to "All Movies", movies_path %> ||
<%= link_to "Edit", edit_movie_path(@movie) %> ||
<%= link_to "Delete", @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
