<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<h3><%= link_to "Add New Movie", new_movie_path %></h3>

<% @movies.each do |movie| %>
  <article>
    <header class="movie">
      <%= image_for(movie) %>
      <h1><%= link_to movie.title, movie %></h1>
    </header>
    <h3>Description:</h3>
    <p><%= movie.description %></p>

    <table>
      <tr>
        <th>Cast:</th>
        <td><%= movie.cast %></td>
      </tr>
      <tr>
        <th>Director:</th>
        <td><%= movie.director %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Release Date:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
      <tr>
        <th>Box Office Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>
