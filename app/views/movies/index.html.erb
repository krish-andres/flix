<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<article>
  <% @movies.each do |movie| %>
    <header class="movie">
      <%= image_for(movie) %>
      <h1><%= link_to movie.title, movie %></h1>
    </header>
    <h3>Description:</h3>
    <p><%= truncate(movie.description, length: 80, separator: ' ') %></p>

    <table>
      <tr>
        <th>Cast:</th>
        <td><%= movie.cast %></td>
      </tr>
      <tr>
        <th>Director:</th>
        <td><%= movie.director %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Release Date:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
      <tr>
        <th>Box Office Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
      <tr>
        <th>Average Reviewer Rating:</th>
        <td><%= format_average_stars(movie) %></td>
      </tr>
    </table>
  <% end %>
</article>
