<header>
  <h1>Sign In</h1>
</header>

<%= form_tag session_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, required: true  %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, required: true %>
  </p>
  <p>
    <%= submit_tag 'Sign In' %>
  </p>
<% end %>
<p>No Account Yet? <%= link_to 'Sign Up', signup_path %>!</p>
